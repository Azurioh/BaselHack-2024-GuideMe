generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x", "darwin-arm64", "linux-arm64-openssl-3.0.x"]
  output        = "./client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  firstName String
  lastName  String
  email     String @unique
  password  String

  guidelines Guideline[] // Relation avec Guideline

  @@map("users")
}

model Guideline {
  id Int @id @default(autoincrement())

  title    String
  imgs     String[]
  keywords String?
  result   String

  ratings Int[]

  creatorId Int? // Clé étrangère
  creator   User? @relation(fields: [creatorId], references: [id]) // Relation avec User

  @@map("guideLines")
}
